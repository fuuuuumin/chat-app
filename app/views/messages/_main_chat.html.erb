<div class="message_header">
  <div class="message_group_name">
    <%= @room.name %>
  </div>
  <div class="message_exit">
    <a href="#">チャットを終了する</a>
  </div>
</div>

<div class="message_main">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'message_bottom', local: true do |f| %>
  <div class="message_bottom_left">
    <%= f.text_field :content, class: 'message_bottom_left_type', placeholder: 'type a message' %>
    <label class="message_bottom_left_image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden'%>
    </label>
  </div>
  <%= f.submit '送信', class: 'message_bottom_right_button' %>
<% end %>


