    <%= f.text_field :content, class: 'message_bottom_left_type', placeholder: 'type a message' %>
    <label class="message_bottom_left_image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden'%>
    </label>
  </div>
  <%= f.submit '送信', class: 'message_bottom_right_button' %>
<% end %>